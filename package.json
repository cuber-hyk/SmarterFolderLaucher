{
  "name": "smarter-folder-launcher",
  "version": "2.1.0",
  "description": "智能文件夹启动器 - 快速访问常用文件夹",
  "main": "src/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:renderer": "vite",
    "dev:main": "electron src/main/main.js",
    "start": "electron src/main/main.js",
    "build:renderer": "vite build",
    "build:dir": "npm run build:renderer && electron-builder --dir",
    "build:win": "npm run build:renderer && electron-builder --win",
    "build:mac": "npm run build:renderer && electron-builder --mac",
    "build:linux": "npm run build:renderer && electron-builder --linux",
    "build:all": "npm run build:renderer && electron-builder --win --mac --linux"
  },
  "keywords": [
    "electron",
    "folder",
    "launcher",
    "productivity"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.6.2",
    "concurrently": "^9.2.1",
    "electron": "^28.1.0",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "prebuild-install": "^7.1.3",
    "vite": "^5.4.19",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "bindings": "^1.5.0",
    "electron-updater": "^6.6.2",
    "file-uri-to-path": "^2.0.0",
    "fs-extra": "^11.3.1",
    "graceful-fs": "^4.2.11",
    "jsonfile": "^6.2.0",
    "pinyin": "^4.0.0",
    "universalify": "^2.0.1",
    "vue": "^3.5.20"
  },
  "build": {
    "appId": "com.example.smarterfolderlauncher",
    "productName": "Smarter Folder Launcher",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "dist-renderer/**/*",
      "assets/**/*",
      "!src/renderer/**/*"
    ],
    "extraResources": [
      {
        "from": "src/database",
        "to": "database"
      },
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "win": {
      "target": "nsis",
      "appId": "com.example.smarterfolderlauncher",
      "icon": "./assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "appId": "com.example.smarterfolderlauncher",
      "icon": "./assets/icon.png",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "appId": "com.example.smarterfolderlauncher",
      "icon": "./assets/icon.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./assets/icon.ico",
      "uninstallerIcon": "./assets/icon.ico",
      "installerHeaderIcon": "./assets/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "SmarterFolderLauncher",
      "runAfterFinish": true,
      "deleteAppDataOnUninstall": false
    },
    "publish": {
      "provider": "github",
      "owner": "cuber-hyk",
      "repo": "SmarterFolderLauncher"
    }
  }
}
